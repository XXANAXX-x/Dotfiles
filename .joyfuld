joyd_tray_programs()
{
    if [ -n "${1}" ]; then
        grep -Fv '#' "$OB_TRAY" | while IFS= read -r TRAY; do

            [ -x "$(command -v "${TRAY%%\ *}")" ] || continue

            case "${1}" in
                exec) pgrep "${TRAY%%\ *}" \
                      || eval "\"$TRAY\"  >/dev/null  2>&1 &"
                ;;
                kill) pgrep "${TRAY%%\ *}" \
                      && eval "killall -9 \"${TRAY%%\ *}\" &"
                ;;
            esac

        done
    fi
}

joyd_gtk_live_reload()
{
    if [ -n "${2}" -a -x "$(command -v xsettingsd)" ]; then
        {
            xsettingsd -c /dev/stdin <<- EOF
				Net/IconThemeName    "${2}"
				Net/ThemeName        "${1}"
			EOF
        } &
        { sleep 2s; killall -9 xsettingsd; } &
    fi
}

joyd_cross_variables()
{
    U4T="$(echo "$CHK_THEME" | cut -b1-4 | sed -e '1s|.*|\U&|')"
    U3M="$(echo "$CHK_MODE"  | cut -b1-3 | sed -e '1s|.*|\U&|')"

    eval " GTK_T=\"\$${U4T}_GTK\"
           ICON_T=\"\$${U4T}_ICON\"
           OBT_D=\"\$${U4T}_OB_THEME_DIR\"
           OBT_IT=\"\$${U4T}_${U3M}_OB_MENU_ITM\"
           OBT_TT=\"\$${U4T}_${U3M}_OB_MENU_TTL\"
           ROFI_A1=\"\$${U4T}_${U3M}_ROFI_ACCNT1\"
